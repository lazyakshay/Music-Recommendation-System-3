<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{=T.accepted_language or 'en'}}">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
<title>{{=response.title or request.application}}</title>
<link rel="shortcut icon"
      href="{{=URL(request.application,'static','favicon.ico')}}" 
      type="image/vnd.microsoft.icon"/>
    {{#------  require CSS and JS files for this page (read info in base.css) ------}}
    {{response.files.append(URL(request.application,'static','music2.css'))}}
    
    {{response.files.append(URL(request.application,'static','music_both.css'))}}
    {{response.files.append(URL(request.application,'static','superfish.js'))}}
    {{#------ include web2py specific js code (jquery, calendar, form stuff) ------}}
    {{include 'web2py_ajax.html'}}
</head>
<body>

<div class="flash">{{=response.flash or ''}}</div>

<div id="main">
  <div id="header">
    <div id="menu">  </div>
    <div id="header-Bottom">
      <div id="logoBlock">
        <h1>My Music</h1>
        <p>EVERYMUSIC YOU WANT TO LISTEN </p>
      </div>
      <div id="navBlock">
        

         </div>

    </div>
  </div>
  <div id="mainCont">
    <div id="leftCol">
      <div id="welcomeBox">

       <h2 align='right'><span class="auth_navbar">[ <a href="{{=URL( request.application, f='user', c='default', args='login')}}">login</a> | <a href="{{=URL(r=request,f='register',c='default')}}">register</a> | <a href="{{=URL( request.application, f='user', c='default', args='request_reset_password')}}">lost password?</a> ]</span>
</h2> <br /> <br /> <br />
<h2>{{=T( request.args(0).replace('_',' ').capitalize() )}}</h2>
{{=form}}
{{if request.args(0)=='login':}}
{{if not 'register' in auth.settings.actions_disabled:}}
<br/><h3><a href="{{=URL(r=request,f='register')}}">register</a></h3>
{{pass}}
{{if not 'request_reset_password' in auth.settings.actions_disabled:}}
<br/><h3><a href="{{=URL(r=request,args='request_reset_password')}}">lost password</a></h3>
{{pass}}
{{pass}}
        
      </div>
          </div>
    <div id="centrCol">
      <div class="banr"><img src="{{=URL(request.application,'static','music.jpg')}}" width="275" height="182" border="0" alt="banr"/></div>
      <div id="albmBlock">
        {{for i in recent:}}
        <div id="albmBox">
          <div class="topCont">
            <h1><img src="{{=URL(request.application,'static',i.pic)}}"width="62" height="54" border="0" alt=""/></h1>
            <p class="headings">{{=i.name[:18]}} <br /><span>{{=i.album[:18]}}</span><br /><span>{{=i.artist[:18]}}</span></p></div>
          
        </div>
        {{pass}}
      </div>
    </div>
    <div id="rightCol">
      <div id="videoBlock">
        <div id="videoBlockTop">
          <h3>TOP DOWNLOADS</h3>
          <p>The latest music, albums, concerts and more<br />
          play your favourites</p>

        </div>
         <div id="videoBlockBody">
      {{ for i in down:}}
          <div class="vidBox">
            <div class="leftBox">
              <p class="bold"><b>{{=i.name[:30]}}</b></p>
              <p class="light">{{=i.album[:20]}}</p>
              <p class="dark">{{=i.artist[:20]}}</p>
            </div>
            <p class="rightBox"><img src="{{=URL(request.application,'static',i.pic)}}"  width="81" height="38" border="0" alt=""/></p> <!-- modify-->
          </div>
        
     {{pass}}
              
        </div>
      </div>
      <div id="videoBlockBot"></div>
    </div>
  </div>
  <div id="footer">
<br /><br /><br /><br />
   <div class="rights">Copyright Â© 2010 <a href="#">www.mymusic.com.</a> All Rights Reserved.</div>

      <div class="rights">Designed by:Raminder</div>
  </div>
</div>

</body>
</html>
